@model List<HTTP5125Cummulative1.Models.Teacher>

<h1 class="title">Teachers List</h1>

<table class="table">
    <thead>
        <tr>
            <th>Teacher ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Hire Date</th>
            <th>Salary</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var teacher in Model)
        {
            <tr>
                <td>@teacher.TeacherId</td>
                <td>@teacher.TeacherFName</td>
                <td>@teacher.TeacherLName</td>
                <td>@teacher.HireDate.ToShortDateString()</td>
                <td>@teacher.Salary.ToString("C")</td>
            </tr>
        }
    </tbody>
</table>


<style>
    .title {
        text-align: center;
        margin-top: 20px;
        font-size: 2em;
        color: #333;
    }
    .table {
        width: 80%;
        margin: 20px auto;
        border-collapse: collapse;
    }
    .table th, .table td {
        padding: 10px;
        border: 1px solid #ddd;
    }
    .table th {
        background-color: #f2f2f2;
    }
    
</style>