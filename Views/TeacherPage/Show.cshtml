@model HTTP5125Cummulative1.Models.Teacher

<h1 class="title">Teacher Details</h1>

<div class="teacher-details">
    <h2>@Model.TeacherFName @Model.TeacherLName</h2>
    <p><strong>Teacher ID:</strong> @Model.TeacherId</p>
    <p><strong>Hire Date:</strong> @Model.HireDate.ToShortDateString()</p>
    <p><strong>Salary:</strong> @Model.Salary.ToString("C")</p>
</div>


<style>
    .title {
        text-align: center;
        margin-top: 20px;
        font-size: 2em;
        color: #333;
    }

    .teacher-details {
        width: 60%;
        margin: 20px auto;
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 5px;
        background-color: #f9f9f9;
    }

        .teacher-details h2 {
            margin-bottom: 20px;
            color: #555;
        }

        .teacher-details p {
            font-size: 1.2em;
            color: #666;
        }

        .teacher-details strong {
            color: #333;
        }
</style>